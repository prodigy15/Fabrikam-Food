<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fabrikam_Food.Views.MenuListPage">
  <StackLayout>
    <Button Text="View Menu" TextColor="White" BackgroundColor="Red" Clicked="ViewMenu_Clicked" />
    <ListView x:Name="MenuList" HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
              </Grid.RowDefinitions>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
              </Grid.ColumnDefinitions>
              <Label Grid.Column="1" Text="{Binding Name}"/>
              <Label Grid.Column="0" Text="{Binding Price}"/>
              <Label Grid.Column="2" Text="{Binding Type}"/>
            </Grid>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>